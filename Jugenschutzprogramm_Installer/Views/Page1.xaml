<UserControl x:Class="Jugenschutzprogramm_Installer.Views.Page1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Jugenschutzprogramm_Installer.ViewManagement.Views"
             Background="{StaticResource WhiteBrush}"
             d:DataContext="{d:DesignInstance views:WelcomeView}"
             d:DesignHeight="550"
             d:DesignWidth="390"
             mc:Ignorable="d">
    <Grid Margin="20">
        <StackPanel Orientation="Vertical">
            <TextBlock FontFamily="Segoe UI Light"
                       FontSize="24"
                       Foreground="White"
                       Text="Willkommen," />
            <TextBlock Foreground="{StaticResource BlackBrush}"
                       Text="wir werden nun beginnen, einen Jugendschutz auf diesem PC zu konfigurieren"
                       TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>
