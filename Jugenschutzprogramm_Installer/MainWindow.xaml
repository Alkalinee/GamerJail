<controls:MetroWindow x:Class="Jugenschutzprogramm_Installer.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:viewModels="clr-namespace:Jugenschutzprogramm_Installer.ViewModels"
                      xmlns:views="clr-namespace:Jugenschutzprogramm_Installer.Views"
                      xmlns:views2="clr-namespace:Jugenschutzprogramm_Installer.ViewManagement.Views"
                      Title="Jugenschutzprogramm einrichten"
                      Width="390"
                      Height="550"
                      Background="#2d2d30"
                      ResizeMode="CanMinimize"
                      ShowCloseButton="False"
                      ShowMaxRestoreButton="False"
                      ShowMinButton="False"
                      ShowTitleBar="False"
                      WindowStartupLocation="CenterScreen"
                      WindowStyle="None"
                      mc:Ignorable="d">
    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="75" />
        </Grid.RowDefinitions>
        <Grid>
            <TextBlock Margin="10"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Foreground="White"
                       Text="Jugendschutzprogramm" />
            <StackPanel Margin="10"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <Button x:Name="PART_MINIMIZE"
                        Width="28"
                        Height="28"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI Symbol"
                        Style="{StaticResource BorderlessAwesomeButton}"
                        ToolTip="Minimieren">
                    <TextBlock FontFamily="Segoe UI Symbol"
                               FontSize="7"
                               Text="&#x2581;" />
                </Button>
                <Button x:Name="PART_CLOSE"
                        Width="28"
                        Height="28"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI Symbol"
                        Style="{StaticResource BorderlessAwesomeButton}"
                        ToolTip="Schließen">
                    <TextBlock FontFamily="Segoe UI Symbol"
                               FontSize="7"
                               Text="&#xE0A4;" />
                </Button>
            </StackPanel>
        </Grid>
        <controls:TransitioningContentControl Grid.Row="1"
                                              Margin="0,20,0,0"
                                              Content="{Binding CurrentView}"
                                              CustomVisualStatesName="{Binding Animation}"
                                              Transition="Custom">
            <controls:TransitioningContentControl.Resources>
                <DataTemplate DataType="{x:Type views2:WelcomeView}">
                    <views:Page1 DataContext="{Binding}" />
                </DataTemplate>
                <DataTemplate DataType="{x:Type views2:Step1}">
                    <views:Page2 DataContext="{Binding}" />
                </DataTemplate>
                <DataTemplate DataType="{x:Type views2:Step2}">
                    <views:Page3 DataContext="{Binding}" />
                </DataTemplate>
            </controls:TransitioningContentControl.Resources>
            <controls:TransitioningContentControl.CustomVisualStates>
                <VisualState Name="MoveForwardState">
                    <Storyboard>
                        <DoubleAnimationUsingKeyFrames BeginTime="00:00:00"
                                                       Storyboard.TargetName="CurrentContentPresentationSite"
                                                       Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                            <SplineDoubleKeyFrame KeyTime="00:00:00" Value="390" />
                            <EasingDoubleKeyFrame KeyTime="00:00:00.700" Value="0">
                                <EasingDoubleKeyFrame.EasingFunction>
                                    <CubicEase EasingMode="EaseOut" />
                                </EasingDoubleKeyFrame.EasingFunction>
                            </EasingDoubleKeyFrame>
                        </DoubleAnimationUsingKeyFrames>
                        <DoubleAnimationUsingKeyFrames BeginTime="00:00:00"
                                                       Storyboard.TargetName="PreviousContentPresentationSite"
                                                       Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                            <SplineDoubleKeyFrame KeyTime="00:00:00" Value="0" />
                            <EasingDoubleKeyFrame KeyTime="00:00:00.700" Value="-390">
                                <EasingDoubleKeyFrame.EasingFunction>
                                    <CubicEase EasingMode="EaseOut" />
                                </EasingDoubleKeyFrame.EasingFunction>
                            </EasingDoubleKeyFrame>
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState Name="MoveBackwardState">
                    <Storyboard>
                        <DoubleAnimationUsingKeyFrames BeginTime="00:00:00"
                                                       Storyboard.TargetName="CurrentContentPresentationSite"
                                                       Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                            <SplineDoubleKeyFrame KeyTime="00:00:00" Value="-390" />
                            <EasingDoubleKeyFrame KeyTime="00:00:00.700" Value="0">
                                <EasingDoubleKeyFrame.EasingFunction>
                                    <CubicEase EasingMode="EaseOut" />
                                </EasingDoubleKeyFrame.EasingFunction>
                            </EasingDoubleKeyFrame>
                        </DoubleAnimationUsingKeyFrames>
                        <DoubleAnimationUsingKeyFrames BeginTime="00:00:00"
                                                       Storyboard.TargetName="PreviousContentPresentationSite"
                                                       Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                            <SplineDoubleKeyFrame KeyTime="00:00:00" Value="0" />
                            <EasingDoubleKeyFrame KeyTime="00:00:00.700" Value="390">
                                <EasingDoubleKeyFrame.EasingFunction>
                                    <CubicEase EasingMode="EaseOut" />
                                </EasingDoubleKeyFrame.EasingFunction>
                            </EasingDoubleKeyFrame>
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </controls:TransitioningContentControl.CustomVisualStates>
        </controls:TransitioningContentControl>
        <Grid Grid.Row="2" Background="#252526">
            <StackPanel Margin="10,10,10,15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                <Button Width="80"
                        Height="25"
                        Content="Abbrechen"
                        Style="{StaticResource AwesomeButton}"
                        ToolTip="Setup abbrechen" />
                <Button Width="80"
                        Height="25"
                        Margin="10,0,10,0"
                        Command="{Binding GoBackCommand}"
                        Content="Zurück"
                        IsEnabled="{Binding CanGoBack}"
                        Style="{StaticResource AwesomeButton}"
                        ToolTip="Vorheriger Schritt" />
                <Button Width="80"
                        Height="25"
                        Command="{Binding GoForwardCommand}"
                        Content="Weiter"
                        Style="{StaticResource AwesomeButton}"
                        ToolTip="Nächster Schritt" />
            </StackPanel>
        </Grid>
    </Grid>
</controls:MetroWindow>
